{
  "ApplicationName": "flight-check-in-service",

  "VaultOptions": {
    "AppRoleId": "app-service",
    "Configuration": {
      "Path": "configuration",
      "MountPoint": "app-backends"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "IdentityServer4": "Warning"
      }
    }
  },
  "LogFilePath": "C://Blueprint//Logs//user-service//",
  "AllowedHosts": "*",
  "OpenApiOptions": {
    "Contact": {
      "Name": "ScutiCode",
      "Email": "info@scuticode.com"
    },
    "OIDC": {
      "AllowedScopes": [
        "flight-check-in-service"
      ]
    }
  },
  "OIDCApiOptions": {
    "Audience": "flight-check-in-service"
  },
  "DbPath": "./BritannicaDb.db"
}
